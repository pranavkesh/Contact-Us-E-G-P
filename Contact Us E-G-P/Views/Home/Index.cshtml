    <script>

        $(document).ready(function () {
            $("#con_name").focus();
            $("#con_btnsave").click(function () {
                // validate mobile number
                var regex = /^(0|91)?[6-9][0-9]{9}$/;
                var status = true;
                //validation start
                var name, mob, email, message;
                name = $("#con_name").val().trim();
                email = $("#con_email").val().trim();
                mob = $("#con_mob").val().trim();
                message = $("#con_msg").val().trim();
                $(".err").remove();


                // validate name
                if (name.length == 0) {
                    $("#con_name").after("<span class='err'>Please enter your name</span>");
                    status = false;
                }
                else if (name.length < 3) {
                    $("#con_name").after("<span class='err'>Please enter your full name</span>");
                    status = false;
                }
                // validate email
                if (email.length == 0) {
                    $("#con_email").after("<span class='err'> Enter your email.</span>");
                    status = false;
                    
                }

                
                
                if (mob.length == 0) {
                    $("#con_mob").after("<span class='err'>Please enter valid mobile number.</span>");
                    status = false;

                }
                else if (regex.test(mob) == false) {
                    $("#con_mob").after("<span class='err'> Invalid mobile number.</span>");
                    status = false;

                }
                //validate message
                if (message.length == 0) {
                    $("#con_msg").after("<span class='err'>Please enter your message.</span>");
                    status = false;
                }
                else {
                    var count = 1;
                    for (x = 0; x < message.length; x++) {
                        var ch = message.charAt(x);
                        if (ch == " " || ch == "." || ch == "," || ch == "!")
                            count++;

                    }
                    if (count < 3) {
                        $("#con_msg").after("<span class='err'>plese enter your complete message.</span>");
                        status = false;
                    }
                }
                return status;
            });
        });
    </script>
